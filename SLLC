#include<iostream>
using namespace std;

class title
{	
	public :	
		int num;
		title *temp;	
};

title *head;

void addhead (){
	head= '\0';
}

bool check (){
	if (head=='\0'){
	return true;
	}
	else{
	return false;
	}
}

void addnumb (int data)
{
title *tmp;
title *help;
	tmp = new title ();
	 	tmp->num = data;
	 		tmp->temp = tmp;
			 	if (check()==1)
				 {
				 	head=tmp;
				 	head->temp=head;
						  }	 
					else
					{
					help=head;
					while(help->temp!=head)
					{
						help=help->temp;
						}	
					tmp->temp=head;
					head=tmp;
					help->temp = head;	
						}
	cout<<"----Menyisipkan data---- \n";
 } 	
 
